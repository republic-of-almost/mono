{
  "name": "GLFW",
  "kind": "StaticLib",
  "language": "C",
  "location": "./",
  "ignore_defaults" : true,

  "public_inc_dirs" : [
    "../include/"
  ],

  "src_files" : [
    "../include/**.h",
    "../src/init.c",
    "../src/input.c",
    "../src/monitor.c",
    "../src/context.c",
    "../src/window.c",
    "../src/vulkan.c",
    "../src/egl_context.c",
    "../src/osmesa_context.c"
  ],

  "src_files_macosx" : [
    "../src/posix_thread.c",
    "../src/egl_context.c",
    "../src/osmesa_context.c",
    "../src/cocoa_init.m",
    "../src/cocoa_joystick.m",
    "../src/cocoa_monitor.m",
    "../src/cocoa_time.c",
    "../src/cocoa_window.m",
    "../src/nsgl_context.m"
  ],

  "link_dependencies_macosx" : [
    "OpenGL.framework",
    "Cocoa.framework",
    "CoreFoundation.framework",
    "Foundation.framework",
    "CoreVideo.framework",
    "IOKit.framework"
  ],

  "defines_macosx" : [
    "_GLFW_COCOA"
  ],

  "src_files_linux" : [
    "../src/posix_thread.c",
    "../src/x11_init.c",
    "../src/x11_monitor.c",
    "../src/x11_window.c",
    "../src/linux_joystick.c",
    "../src/posix_time.c",
    "../src/posix_thread.c",
    "../src/glx_context.c",
    "../src/xkb_unicode.c"
  ],

  "link_dependencies_linux" : [
    "dl",
    "pthread",
    "GL",
    "Xrandr",
    "Xi",
    "Xrender",
    "drm",
    "Xdamage",
    "Xxf86vm",
    "Xext",
    "X11",
    "Xinerama",
    "Xcursor",
		"m"
  ],

  "defines_linux" : [
     "_GLFW_X11"
  ],

  "src_files_windows" : [
    "../src/win32_init.c",
    "../src/win32_monitor.c",
    "../src/win32_window.c",
    "../src/win32_joystick.c",
    "../src/win32_time.c",
    "../src/win32_thread.c",
    "../src/wgl_context.c"
  ],

  "link_dependencies_windows" : [
    "OpenGL32.lib"
  ],

  "defines_windows" : [
     "_GLFW_WIN32",
     "_CRT_SECURE_NO_WARNINGS"
  ],

  "disable_warning_windows" : [
    "4152",
    "4456",
    "4244",	
    "4100",
    "4204"
  ],

  "disable_warning_linux" : [
    "int-conversion",
    "implicit-function-declaration",
    "endif-labels",
    "unused-parameter",
    "sign-compare"
  ],

  "disable_warning_osx" : [
    "int-conversion",
    "implicit-function-declaration",
    "endif-labels",
    "unused-parameter",
    "sign-compare"
  ]
}
